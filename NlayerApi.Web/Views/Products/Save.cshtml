@{
    Layout = "_Layout";
}

@model ProductCreateDto

<div class="row">

    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="Products">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Priace"></label>
                <input asp-for="Priace" class="form-control" />
                <span asp-validation-for="Priace" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control"> </select>
                <span asp-validation-for="Priace" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Kaydet" class="btn btn-info" />
            </div>
        </form>
        
    </div>
</div>